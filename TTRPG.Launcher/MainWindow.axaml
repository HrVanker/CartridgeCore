<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TTRPG.Launcher.MainWindow"
        Title="Cartridge Core Launcher" Width="800" Height="450"
        Background="#2D2D30">

	<Grid ColumnDefinitions="250, *">
		<Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
			<ListBox x:Name="CartridgeList" Background="Transparent" SelectionChanged="CartridgeList_SelectionChanged">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Margin="5">
							<TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="White"/>
							<TextBlock Text="{Binding Version}" Foreground="Gray" FontSize="11"/>
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</Border>

		<StackPanel Grid.Column="1" Margin="20" Spacing="10">
			<TextBlock Text="SELECTED CARTRIDGE" Foreground="Gray" FontSize="10" LetterSpacing="1"/>
			<TextBlock x:Name="TitleText" Text="Select a Cartridge..." Foreground="White" FontSize="24" FontWeight="Bold"/>

			<TextBlock Text="AUTHOR" Foreground="Gray" FontSize="10" LetterSpacing="1" Margin="0,10,0,0"/>
			<TextBlock x:Name="AuthorText" Text="-" Foreground="#4EC9B0" FontSize="16"/>

			<TextBlock Text="DEPENDENCIES" Foreground="Gray" FontSize="10" LetterSpacing="1" Margin="0,10,0,0"/>
			<TextBlock x:Name="DepText" Text="-" Foreground="#DCDCAA" FontSize="14" TextWrapping="Wrap"/>

			<Button x:Name="PlayButton" Content="INSERT CARTRIDGE (LAUNCH)"
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                    Height="50" Margin="0,30,0,0"
                    Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="16"
                    IsEnabled="False" Click="PlayButton_Click"/>
		</StackPanel>
	</Grid>
</Window>